<idea-plugin>
    <id>com.github.andreypfau.intellij-ton</id>
    <name>TON Development</name>
    <vendor email="andreypfau@yandex.ru" url="https://github.com/andreypfau/intellij-ton">andreypfau</vendor>

    <description><![CDATA[
        TON Development plugin for IntelliJ Platform.

        Includes support for Fift and FunC languages.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">

        <!--  FunC Language -->

        <fileType name="FunC"
                  implementationClass="com.github.andreypfau.intellijton.func.FuncFileType"
                  fieldName="INSTANCE"
                  language="FunC"
                  extensions="fc"/>
        <lang.parserDefinition language="FunC"
                               implementationClass="com.github.andreypfau.intellijton.func.core.FuncParserDefinition"/>
        <lang.syntaxHighlighterFactory language="FunC"
                                       implementationClass="com.github.andreypfau.intellijton.func.ide.FuncSyntaxHighlighterFactory"/>
        <lang.commenter language="FunC"
                        implementationClass="com.github.andreypfau.intellijton.func.ide.FuncCommenter"/>
        <lang.braceMatcher language="FunC"
                           implementationClass="com.github.andreypfau.intellijton.func.ide.FuncBraceMatcher"/>
        <lang.findUsagesProvider language="FunC"
                                 implementationClass="com.github.andreypfau.intellijton.func.ide.FuncFindUsagesProvider"/>
        <colorSettingsPage implementation="com.github.andreypfau.intellijton.func.ide.FuncColorSettingsPage"/>
        <internalFileTemplate name="FunC Contract"/>

        <!--  Fift Language -->

        <fileType name="Fift"
                  implementationClass="com.github.andreypfau.intellijton.fift.FiftFileType"
                  fieldName="INSTANCE"
                  language="Fift"
                  extensions="fif"/>
        <lang.parserDefinition language="Fift"
                               implementationClass="com.github.andreypfau.intellijton.fift.core.FiftParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Fift"
                                       implementationClass="com.github.andreypfau.intellijton.fift.ide.FiftSyntaxHighlighterFactory"/>
        <lang.commenter language="Fift"
                        implementationClass="com.github.andreypfau.intellijton.fift.ide.FiftCommenter"/>
        <lang.braceMatcher language="Fift"
                           implementationClass="com.github.andreypfau.intellijton.fift.ide.FiftBraceMatcher"/>
        <colorSettingsPage implementation="com.github.andreypfau.intellijton.fift.ide.FiftColorSettingsPage"/>
        <internalFileTemplate name="Fift File"/>

        <!--  Bug of Cells File -->

        <fileType name="Bug of Cells"
                  implementationClass="com.github.andreypfau.intellijton.boc.BocFileType"
                  fieldName="INSTANCE"
                  extensions="boc"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="func.file.create"
                class="com.github.andreypfau.intellijton.func.ide.actions.FuncCreateFileAction"
                text="Create FunC File">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewXml"/>
        </action>
        <action id="fift.file.create"
                class="com.github.andreypfau.intellijton.fift.ide.actions.FiftCreateFileAction"
                text="Create Fift File">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="func.file.create"/>
        </action>
    </actions>
</idea-plugin>